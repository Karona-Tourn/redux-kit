{
  "name": "redux-kits",
  "version": "0.5.2",
  "description": "Support working with Redux",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "doc": "yarn typedoc --theme minimal --name 'Redux Kit' --exclude '**/*+(index|.test).tsx' --out docs src"
  },
  "keywords": [
    "redux-kits"
  ],
  "repository": "https://github.com/Karona-Tourn/redux-kits",
  "author": "Karona Tourn <tournkarona@gmail.com> (https://github.com/Karona-Tourn)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Karona-Tourn/redux-kits/issues"
  },
  "homepage": "https://github.com/Karona-Tourn/redux-kits#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.17.1",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/qs": "^6.9.5",
    "@types/react": "^16.14.2",
    "@types/react-native": "0.63.44",
    "@types/react-redux": "^7.1.15",
    "@types/redux": "^3.6.0",
    "@types/redux-saga": "^0.10.5",
    "commitlint": "^8.3.5",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.7",
    "jest": "^26.0.1",
    "metro-react-native-babel-preset": "^0.63.0",
    "pod-install": "^0.1.14",
    "prettier": "^2.2.1",
    "react": "~16.11.0",
    "react-native": "~0.62.0",
    "react-redux": "^7.2.2",
    "redux-saga": "^1.1.3",
    "redux-saga-test-plan": "^4.0.1",
    "redux-saga-tester": "^1.0.874",
    "release-it": "^13.6.2",
    "typedoc": "^0.20.13",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-redux": "^7.2.1",
    "redux-saga": "^1.1.3"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "no-shadow": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "docs"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "npm": {
      "publish": true,
      "ignoreVersion": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "immer": "8.0.1",
    "lodash": "^4.17.20",
    "qs": "6.9.4"
  }
}
